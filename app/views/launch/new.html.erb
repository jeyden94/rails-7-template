<h3>Create a Game</h3>

<%= form_with url: games_path, method: :post, local: true do %>
  <div>
    <label for="player_count">How many players?</label>
    <select id="player_count" name="query_player_count">
      <% (2..5).each do |count| %>
        <option value="<%= count %>"><%= count %></option>
      <% end %>
    </select>
  </div>

  <div>
    <label for="bot_count">How many bots?</label>
    <select id="bot_count" name="query_bot_count">
      <% (0..4).each do |count| %>
        <option value="<%= count %>"><%= count %></option>
      <% end %>
    </select>
  </div>

  <div>
    <%= submit_tag 'Launch Game' %>
  </div>
<% end %>

<hr>

<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>
